---
import Layout from '../layouts/Layout.astro';
import { SubscriptionPlans } from '@/components/subscription/SubscriptionPlans';
---

<Layout title="Pricing - Zodiac AI Chat">
  <main class="min-h-screen bg-gradient-to-b from-purple-900 via-indigo-900 to-black">
    <div class="container mx-auto px-4 py-16">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">Choose Your Plan</h1>
        <p class="text-lg text-gray-300">Unlock the full potential of your cosmic journey</p>
      </div>
      <SubscriptionPlans client:load />
    </div>
  </main>
</Layout>