---
import Layout from '../layouts/Layout.astro';
import { LoginForm } from '@/components/auth/LoginForm';
---

<Layout title="Login - Zodiac AI Chat">
  <main class="min-h-screen bg-gradient-to-b from-purple-900 via-indigo-900 to-black flex items-center justify-center">
    <div class="w-full max-w-md bg-white/10 backdrop-blur-lg p-8 rounded-lg shadow-xl">
      <h1 class="text-3xl font-bold text-white text-center mb-8">Welcome Back</h1>
      <LoginForm client:load />
      <p class="text-center mt-4 text-gray-300">
        Don't have an account? <a href="/register" class="text-blue-400 hover:underline">Register</a>
      </p>
    </div>
  </main>
</Layout>