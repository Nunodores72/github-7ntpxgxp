---
import Layout from '../layouts/Layout.astro';
import { ChatWindow } from '@/components/chat/ChatWindow';
import { AuthGuard } from '@/components/auth/AuthGuard';
---

<Layout title="Chat - Zodiac AI Chat">
  <main class="min-h-screen bg-gradient-to-b from-purple-900 via-indigo-900 to-black p-8">
    <div class="container mx-auto max-w-4xl">
      <h1 class="text-3xl font-bold text-white mb-8 text-center">Your Cosmic Guide</h1>
      <AuthGuard client:load>
        <ChatWindow client:load />
      </AuthGuard>
    </div>
  </main>
</Layout>